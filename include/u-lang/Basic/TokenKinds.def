#ifndef TOK
#define TOK(X)
#endif
#ifndef PUNCTUATOR
#define PUNCTUATOR(X, Y) TOK(X)
#endif
#ifndef KEYWORD
#define KEYWORD(X) TOK(kw_ ## X)
#endif

TOK(unknown) // Not a token.
TOK(eof)     // End of file.
TOK(eol)     // End of line.

TOK(comment) // Comment.

TOK(identifier)  // Any identifier.

TOK(integer_constant)                  // An integer constant value.
TOK(real_constant)                     // A floating-point constant value.

//PUNCTUATOR(l_square, "[")
//PUNCTUATOR(r_square, "]")
PUNCTUATOR(amp, "&")
//PUNCTUATOR(ampamp, "&&")
//PUNCTUATOR(pipe, "|")
//PUNCTUATOR(pipepipe, "||")

KEYWORD(fn)
//KEYWORD(if)

#undef KEYWORD
#undef PUNCTUATOR
#undef TOK